 public boolean isPowerOfTwo(int n) {
        
        // while(n>=2){
        //    if(n%2!=0) 
        //       return false;
        //    n/=2;
        // }
        // return n==1;

        if(n<=0){
            return false;
        }else if(n==1){
            return true;
        }else
     
           return (n%2==0) && isPowerOfTwo(n/2) ; 

    }
